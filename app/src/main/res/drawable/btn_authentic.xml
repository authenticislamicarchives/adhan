<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="50dp"/>
            <stroke android:width="1dp" android:color="@color/color_row_light" />
            <gradient android:angle="-90" android:startColor="@color/color_row" android:endColor="@color/color_row"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="50dp"/>
            <stroke android:width="1dp" android:color="@color/color_row_light" />
            <solid android:color="@color/color_row"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle">
            <corners android:radius="50dp"/>
            <stroke android:width="1dp" android:color="@color/color_row" />
            <gradient android:angle="-90" android:startColor="@color/color_row_light" android:endColor="@color/color_row_light" />
        </shape>
    </item>
</selector>